<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AudioCutter" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/brand_bg_dark</item>
        <item name="android:navigationBarColor">@color/brand_bg_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="Theme.AudioCutter.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">400</item>
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="postSplashScreenTheme">@style/Theme.AudioCutter</item>
    </style>
</resources>
